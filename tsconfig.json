{
	"compilerOptions": {
		"rootDirs": [
			"src"
		],
		"lib": ["es2023"],
		"target": "es2023",
		"module": "esnext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"types": [
			"node"
		],
		"strict": true,
		"skipLibCheck": true,
		"noEmit": true,
		"allowImportingTsExtensions": true
	},
	"include": ["src"]
}
